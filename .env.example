# =================================================================
# AnimalSys Environment Configuration Template
# =================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# =================================================================

# -----------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------
ENVIRONMENT=production
APP_NAME=AnimalSys

# -----------------------------------------------------------------
# Backend API Settings
# -----------------------------------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080

# -----------------------------------------------------------------
# Frontend Settings
# -----------------------------------------------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8080

# -----------------------------------------------------------------
# Database Settings (MongoDB)
# -----------------------------------------------------------------
MONGO_PORT=27017
MONGO_DATABASE=animalsys
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production

# -----------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------
# JWT Secret - MUST be changed in production (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------
# Nginx Reverse Proxy (Optional - Production only)
# -----------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# -----------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_IP=100
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_REQUESTS_PER_USER=1000
RATE_LIMIT_WINDOW_HOURS=1

# -----------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_PATH=/uploads

# -----------------------------------------------------------------
# Logging
# -----------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# -----------------------------------------------------------------
# Email Settings (Optional - for future use)
# -----------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@animalsys.org
# SMTP_FROM_NAME=AnimalSys

# -----------------------------------------------------------------
# Default Admin User (created during setup)
# -----------------------------------------------------------------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@animalsys.local
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately

# -----------------------------------------------------------------
# Application Features
# -----------------------------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false

# -----------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------
DEFAULT_LANGUAGE=en
AVAILABLE_LANGUAGES=en,pl

# -----------------------------------------------------------------
# Timezone
# -----------------------------------------------------------------
TZ=Europe/Warsaw

# -----------------------------------------------------------------
# Backup Settings
# -----------------------------------------------------------------
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------
# Air (hot reload for Go)
AIR_ENABLED=true

# Vite dev server
VITE_DEV_SERVER=true
